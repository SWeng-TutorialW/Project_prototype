<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="registerWin" prefHeight="520.0" prefWidth="500.0" style="-fx-background-color: #f8d5ec;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.RegistrationController">

   <children>

      <AnchorPane fx:id="regAnchPane" layoutX="20.0" layoutY="20.0" prefHeight="480.0" prefWidth="460.0" style="-fx-background-color: #ffffff; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e9a4c7; -fx-border-width: 1.5;">
         <children>

            <Label fx:id="regLbl" layoutX="150.0" layoutY="15.0" text="Registration">
               <font>
                  <Font name="Segoe UI Semibold" size="24.0" />
               </font>
            </Label>

            <Label layoutX="30.0" layoutY="60.0" text="Subscription Type:">
               <font><Font name="Segoe UI" size="13.0" /></font>
            </Label>
            <ComboBox fx:id="select_account_type" layoutX="160.0" layoutY="58.0" onAction="#selected_account" prefWidth="200.0" />

            <Label fx:id="select_store_label" layoutX="30.0" layoutY="95.0" text="Select Store:" visible="false">
               <font><Font name="Segoe UI" size="13.0" /></font>
            </Label>
            <ComboBox fx:id="select_store" layoutX="160.0" layoutY="93.0" onAction="#select_store" prefWidth="200.0" visible="false" />

            <Label layoutX="30.0" layoutY="130.0" text="Username:">
               <font><Font name="Segoe UI" size="13.0" /></font>
            </Label>
            <TextField fx:id="regUserTxtB" layoutX="160.0" layoutY="128.0" prefWidth="200.0" />

            <Label layoutX="30.0" layoutY="165.0" text="Email:">
               <font><Font name="Segoe UI" size="13.0" /></font>
            </Label>
            <TextField fx:id="regEmailTxtB" layoutX="160.0" layoutY="163.0" prefWidth="200.0" />

            <Label layoutX="30.0" layoutY="200.0" text="Full Name:">
               <font><Font name="Segoe UI" size="13.0" /></font>
            </Label>
            <TextField fx:id="regFullNameTxtB" layoutX="160.0" layoutY="198.0" prefWidth="200.0" />

            <Label layoutX="30.0" layoutY="235.0" text="Phone Number:">
               <font><Font name="Segoe UI" size="13.0" /></font>
            </Label>
            <TextField fx:id="regPhoneTxtB" layoutX="160.0" layoutY="233.0" prefWidth="200.0" />

            <Label layoutX="30.0" layoutY="270.0" text="Password:">
               <font><Font name="Segoe UI" size="13.0" /></font>
            </Label>
            <PasswordField fx:id="regPassTxtB" layoutX="160.0" layoutY="268.0" prefWidth="200.0" />
            <TextField fx:id="regPassVisibleTxtB" layoutX="160.0" layoutY="268.0" prefWidth="200.0" visible="false" />

            <Label layoutX="30.0" layoutY="305.0" text="Confirm Password:">
               <font><Font name="Segoe UI" size="13.0" /></font>
            </Label>
            <PasswordField fx:id="regPassConfTxtB" layoutX="160.0" layoutY="303.0" prefWidth="200.0" />
            <TextField fx:id="regPassConfVisibleTxtB" layoutX="160.0" layoutY="303.0" prefWidth="200.0" visible="false" />

            <CheckBox fx:id="regShowPassCB" layoutX="164.0" layoutY="421.0" onAction="#togglePass" text="Show Password">
               <font><Font name="Segoe UI" size="12.0" /></font>
            </CheckBox>

            <Label fx:id="id" layoutX="30.0" layoutY="342.0" text="ID Number:" />
            <PasswordField fx:id="id_text" layoutX="160.0" layoutY="338.0" prefWidth="200.0" />

            <Label fx:id="credit_Card" layoutX="29.0" layoutY="379.0" text="Credit Card:" visible="false" />
            <PasswordField fx:id="credit_card_box" layoutX="160.0" layoutY="375.0" prefWidth="200.0" visible="false" />

            <Button fx:id="regBtn" layoutX="176.0" layoutY="449.0" onMouseClicked="#RegToSys" prefWidth="80.0" style="-fx-background-color: #e9a4c7; -fx-text-fill: white;" text="Register">
               <font><Font name="Segoe UI" size="13.0" /></font>
            </Button>

         </children>
      </AnchorPane>

   </children>
</AnchorPane>
