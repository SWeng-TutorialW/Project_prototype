<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="800.0"
            style="-fx-background-color: #EFE7F6;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.CheckoutController">

    <children>
        <Label alignment="TOP_CENTER" layoutX="2.0" layoutY="14.0"
               prefHeight="96.0" prefWidth="800.0"
               text="Checkout" textAlignment="CENTER"
               textFill="#4B275F">  <!-- Deep purple headline -->
            <font>
                <Font name="Segoe UI Light" size="48.0" />
            </font>
        </Label>

        <ScrollPane fitToWidth="true" layoutX="50.0" layoutY="150.0"
                    prefHeight="650.0" prefWidth="700.0">
            <content>
                <VBox alignment="CENTER" spacing="20.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>

                    <GridPane hgap="10.0" vgap="10.0">
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>

                        <!-- Section Headers -->
                        <Label text="Personal Information" textFill="#4B275F"
                               style="-fx-font-weight: bold;"
                               GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
                            <font>
                                <Font size="21.0" />
                            </font>
                        </Label>

                        <!-- Labels and Fields -->
                        <Label text="Name:" textFill="#333"
                               GridPane.rowIndex="1">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="nameField"
                                   style="-fx-border-color: #B79DD9;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Email:" textFill="#333"
                               GridPane.rowIndex="2">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="emailField"
                                   style="-fx-border-color: #B79DD9;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Phone:" textFill="#333"
                               GridPane.rowIndex="3">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="phoneField"
                                   style="-fx-border-color: #B79DD9;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Address Information" textFill="#4B275F"
                               style="-fx-font-weight: bold;"
                               GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4">
                            <font>
                                <Font size="21.0" />
                            </font>
                        </Label>

                        <Label text="City:" textFill="#333"
                               GridPane.rowIndex="5">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="cityField"
                                   style="-fx-border-color: #B79DD9;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="5" />

                        <Label text="Street Address:" textFill="#333"
                               GridPane.rowIndex="6">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="streetAddressField"
                                   style="-fx-border-color: #B79DD9;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="6" />

                        <Label text="Apartment:" textFill="#333"
                               GridPane.rowIndex="7">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="apartmentField"
                                   style="-fx-border-color: #B79DD9;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="7" />

                        <Label text="Delivery Options" textFill="#4B275F"
                               style="-fx-font-weight: bold;"
                               GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="8">
                            <font>
                                <Font size="21.0" />
                            </font>
                        </Label>

                        <Label text="Delivery:" textFill="#333"
                               GridPane.rowIndex="9">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="deliveryTypeComboBox"
                                  prefWidth="200.0"
                                  style="-fx-border-color: #B79DD9;"
                                  GridPane.columnIndex="1" GridPane.rowIndex="9"/>

                        <Label text="Delivery Time:" textFill="#333"
                               GridPane.rowIndex="10">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="10">
                            <DatePicker fx:id="deliveryDatePicker"
                                        style="-fx-border-color: #B79DD9;"/>
                            <Label text="Time:" textFill="#333" />
                            <ComboBox fx:id="deliveryTimeComboBox"
                                      prefWidth="100.0"
                                      style="-fx-border-color: #B79DD9;"/>
                        </HBox>

                        <Label text="Greeting Card (Optional)" textFill="#4B275F"
                               style="-fx-font-weight: bold;"
                               GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="11">
                            <font>
                                <Font size="21.0" />
                            </font>
                        </Label>

                        <Label text="Include Greeting Card:" textFill="#333"
                               GridPane.rowIndex="12">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <CheckBox fx:id="includeGreetingCardCheckBox"
                                  text="Add a personalized greeting card"
                                  GridPane.columnIndex="1" GridPane.rowIndex="12"/>

                        <Label text="Card Background:" textFill="#333"
                               GridPane.rowIndex="13">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="greetingCardBackgroundComboBox"
                                  prefWidth="200.0"
                                  style="-fx-border-color: #B79DD9;"
                                  GridPane.columnIndex="1" GridPane.rowIndex="13"/>

                        <Label text="Greeting Message:" textFill="#333"
                               GridPane.rowIndex="14">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="14">
                            <TextArea fx:id="greetingCardMessageTextArea"
                                      prefHeight="80.0" prefWidth="200.0"
                                      promptText="Enter your greeting message (max 300 characters)"
                                      style="-fx-border-color: #B79DD9;"/>
                            <Label fx:id="characterCountLabel" text="0/300 characters" 
                                   style="-fx-font-size: 12; -fx-text-fill: #666;"/>
                            <Button fx:id="previewGreetingCardButton" 
                                    text="Preview Greeting Card"
                                    style="-fx-background-color: #9B6B9E; -fx-text-fill: #fff;"
                                    prefWidth="150.0" prefHeight="30.0"
                                    onAction="#previewGreetingCard"/>
                        </VBox>
                    </GridPane>

                    <Label text="Order Items" textFill="#4B275F" style="-fx-font-weight: bold;">
                        <font>
                            <Font size="20.0" />
                        </font>
                    </Label>

                    <TableView fx:id="orderTable" prefHeight="200.0" VBox.vgrow="NEVER"
                               style="-fx-background-color: #fff; -fx-border-color: #B79DD9;">
                        <columns>
                            <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Flower Name" />
                            <TableColumn fx:id="typeColumn" prefWidth="100.0" text="Type" />
                            <TableColumn fx:id="colorColumn" prefWidth="80.0" text="Color" />
                            <TableColumn fx:id="categoryColumn" prefWidth="100.0" text="Category" />
                            <TableColumn fx:id="priceColumn" prefWidth="80.0" text="Price" />
                            <TableColumn fx:id="quantityColumn" prefWidth="80.0" text="Quantity" />
                            <TableColumn fx:id="totalColumn" prefWidth="80.0" text="Total" />
                        </columns>
                    </TableView>

                    <HBox alignment="CENTER_RIGHT" spacing="20.0">
                        <Label fx:id="deliveryFeeLabel" text="Delivery Fee: ₪0.00" textFill="#4B275F">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <Label fx:id="orderTotal" text="Total: ₪0.00" textFill="#4B275F">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                    </HBox>
                    <Label fx:id="discountLabel" text="" visible="false" style="-fx-text-fill: #388e3c; -fx-font-size: 18; -fx-font-weight: bold;" />

                    <HBox alignment="CENTER" spacing="20.0">
                        <Button fx:id="placeOrderButton" mnemonicParsing="false"
                                onAction="#placeOrder" prefHeight="40.0" prefWidth="200.0"
                                style="-fx-background-color: #9B6B9E; -fx-text-fill: #fff;"
                                text="Place Order">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>
                        <Button fx:id="cancelButton" mnemonicParsing="false"
                                onAction="#cancel" prefHeight="40.0" prefWidth="200.0"
                                style="-fx-background-color: #B79DD9; -fx-text-fill: #4B275F;"
                                text="Cancel">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
