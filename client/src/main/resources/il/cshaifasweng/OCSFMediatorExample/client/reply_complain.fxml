<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300" prefWidth="400" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ReplyComplainController">

    <VBox alignment="TOP_LEFT" spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <Label text="Reply to Complaint:" />

        <TextArea fx:id="replyArea" prefHeight="180" promptText="Write your response here..." />

        <Button alignment="TOP_CENTER" maxWidth="Infinity" onAction="#sendReply" text="Send Reply" />
    </VBox>
</AnchorPane>
