<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #C8A2C8;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.CartController">
    <children>
        <Label alignment="TOP_CENTER" layoutX="2.0" layoutY="14.0" prefHeight="96.0" prefWidth="800.0" text="Shopping Cart" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Segoe UI Light" size="48.0" />
            </font>
        </Label>

        <VBox alignment="CENTER" layoutX="50.0" layoutY="150.0" prefHeight="400.0" prefWidth="700.0" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <TableView fx:id="cartTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Flower Name" />
                    <TableColumn fx:id="storeColumn" prefWidth="80.0" text="Store" />
                    <TableColumn fx:id="typeColumn" prefWidth="100.0" text="Type" />
                    <TableColumn fx:id="colorColumn" prefWidth="80.0" text="Color" />
                    <TableColumn fx:id="categoryColumn" prefWidth="100.0" text="Category" />
                    <TableColumn fx:id="priceColumn" prefWidth="80.0" text="Price" />
                    <TableColumn fx:id="quantityColumn" prefWidth="80.0" text="Quantity" />
                    <TableColumn fx:id="totalColumn" prefWidth="80.0" text="Total" />
                    <TableColumn fx:id="actionColumn" prefWidth="80.0" text="Action" />

                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="20.0">
                <Label fx:id="cartTotal" text="Total: $0.00" textFill="WHITE">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </HBox>

            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="checkoutButton" mnemonicParsing="false" onAction="#checkout" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #9B6B9E;" text="Proceed to Checkout" textFill="WHITE">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
                <Button fx:id="continueShoppingButton" mnemonicParsing="false" onAction="#continueShopping" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #9B6B9E;" text="Continue Shopping" textFill="WHITE">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </children>
</AnchorPane>