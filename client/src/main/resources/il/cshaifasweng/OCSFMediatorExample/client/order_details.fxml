                        <Label fx:id="deliveryFeeLabel" text="₪0.00" />
                        <Label fx:id="discountLabel" style="-fx-text-fill: #388e3c; -fx-font-size: 16; -fx-font-weight: bold;" text="" visible="false" />
                        <Label fx:id="totalAmountLabel" style="-fx-font-size: 16;" text="₪0.00" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
      
      <Button fx:id="backButton" layoutX="400.0" layoutY="750.0" onAction="#handleBackButton" prefHeight="30.0" prefWidth="100.0" text="Back" />
   </children>
</AnchorPane>
