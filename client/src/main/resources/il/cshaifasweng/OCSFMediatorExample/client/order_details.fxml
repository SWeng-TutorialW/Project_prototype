                              <Label style="-fx-font-weight: bold;" text="Cancellation Date:" />
                              <Label fx:id="cancellationDateLabel" text="Cancellation Date" />
                           </children>
                        </VBox>
                        <VBox prefWidth="200.0" spacing="5.0">
                           <children>
                              <Label style="-fx-font-weight: bold;" text="Refund Amount:" />
                              <Label fx:id="refundAmountLabel" text="Refund Amount" />
                           </children>
                        </VBox>
                        <VBox prefWidth="300.0" spacing="5.0">
                           <children>
                              <Label style="-fx-font-weight: bold;" text="Cancellation Reason:" />
                              <Label fx:id="cancellationReasonLabel" text="Cancellation Reason" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Greeting Card Information (if included) -->
            <VBox fx:id="greetingCardSection" spacing="5.0" visible="false">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="Greeting Card Information:" />
                  <HBox spacing="20.0">
                     <children>
                        <VBox prefWidth="200.0" spacing="5.0">
                           <children>
                              <Label style="-fx-font-weight: bold;" text="Card Background:" />
                              <Label fx:id="greetingCardBackgroundLabel" text="Card Background" />
                           </children>
                        </VBox>
                        <VBox prefWidth="500.0" spacing="5.0">
                           <children>
                              <Label style="-fx-font-weight: bold;" text="Greeting Message:" />
                              <Label fx:id="greetingCardMessageLabel" text="Greeting Message" wrapText="true" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Items Table -->
            <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="Order Items:" />
            <TableView fx:id="itemsTable" prefHeight="250.0" prefWidth="800.0">
