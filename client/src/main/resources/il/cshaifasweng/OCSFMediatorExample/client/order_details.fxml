                  <TableColumn fx:id="itemCategoryColumn" prefWidth="90.0" text="Category" />
                  <TableColumn fx:id="itemStoreColumn" prefWidth="80.0" text="Store" />
                  <TableColumn fx:id="itemPriceColumn" prefWidth="70.0" text="Price" />
                  <TableColumn fx:id="itemQuantityColumn" prefWidth="70.0" text="Quantity" />
                  <TableColumn fx:id="itemTotalColumn" prefWidth="80.0" text="Total" />
               </columns>
            </TableView>
            
            <!-- Order Summary -->
            <HBox alignment="CENTER_RIGHT" spacing="20.0">
               <children>
                  <VBox alignment="CENTER_RIGHT" spacing="5.0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Subtotal:" />
                        <Label style="-fx-font-weight: bold;" text="Delivery Fee:" />
                        <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="Total Amount:" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_RIGHT" spacing="5.0">
                     <children>
