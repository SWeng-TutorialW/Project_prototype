                  <Label style="-fx-font-weight: bold;" text="Delivery Address:" />
                  <Label fx:id="addressLabel" text="Address" />
               </children>
            </VBox>
            
            <!-- Delivery Time (if delivery) -->
            <VBox fx:id="deliveryTimeSection" spacing="5.0" visible="false">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Delivery Time:" />
                  <Label fx:id="deliveryTimeLabel" text="Delivery Time" />
               </children>
            </VBox>
            
            <!-- Cancellation Information (if cancelled) -->
            <VBox fx:id="cancellationSection" spacing="5.0" visible="false">
