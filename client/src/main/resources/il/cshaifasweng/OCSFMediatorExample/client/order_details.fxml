                        <Label style="-fx-font-weight: bold;" text="Order ID:" />
                        <Label fx:id="orderIdLabel" text="Order ID" />
                     </children>
                  </VBox>
                  <VBox prefWidth="200.0" spacing="5.0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Order Date:" />
                        <Label fx:id="orderDateLabel" text="Order Date" />
                     </children>
                  </VBox>
                  <VBox prefWidth="200.0" spacing="5.0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Status:" />
                        <Label fx:id="statusLabel" text="Status" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <!-- Customer Information -->
            <HBox spacing="20.0">
               <children>
                  <VBox prefWidth="200.0" spacing="5.0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Customer Name:" />
                        <Label fx:id="customerNameLabel" text="Customer Name" />
                     </children>
                  </VBox>
                  <VBox prefWidth="200.0" spacing="5.0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Customer Email:" />
                        <Label fx:id="customerEmailLabel" text="Customer Email" />
                     </children>
                  </VBox>
                  <VBox prefWidth="200.0" spacing="5.0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Delivery Type:" />
                        <Label fx:id="deliveryTypeLabel" text="Delivery Type" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <!-- Address Information (if delivery) -->
            <VBox fx:id="addressSection" spacing="5.0" visible="false">
