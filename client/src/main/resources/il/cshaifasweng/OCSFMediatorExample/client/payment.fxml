<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #EFE7F6;" 
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.PaymentController">
    <children>
        <Label alignment="TOP_CENTER" layoutX="2.0" layoutY="14.0" prefHeight="96.0" prefWidth="800.0" 
               text="Secure Payment" textAlignment="CENTER" textFill="#4B275F">
            <font>
                <Font name="Segoe UI Light" size="48.0" />
            </font>
        </Label>

        <VBox alignment="CENTER" layoutX="50.0" layoutY="150.0" prefHeight="400.0" prefWidth="700.0" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Label text="Payment Details" textFill="#4B275F" style="-fx-font-weight: bold;">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>

            <Label text="Total Amount: â‚ª0.00" fx:id="totalAmountLabel" textFill="#4B275F">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>

            <GridPane hgap="10.0" vgap="10.0">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>

                <Label text="Card Number:" textFill="#333" GridPane.rowIndex="0">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <TextField fx:id="cardNumberField" promptText="1234 5678 9012 3456" 
                          style="-fx-border-color: #B79DD9;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Cardholder Name:" textFill="#333" GridPane.rowIndex="1">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <TextField fx:id="cardholderNameField" promptText="John Doe" 
                          style="-fx-border-color: #B79DD9;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Expiry Date:" textFill="#333" GridPane.rowIndex="2">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <ComboBox fx:id="expiryMonthComboBox" prefWidth="100.0" 
                             style="-fx-border-color: #B79DD9;" promptText="MM" />
                    <ComboBox fx:id="expiryYearComboBox" prefWidth="100.0" 
                             style="-fx-border-color: #B79DD9;" promptText="YYYY" />
                </HBox>

                <Label text="CVV:" textFill="#333" GridPane.rowIndex="3">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <PasswordField fx:id="cvvField" promptText="123" 
                             style="-fx-border-color: #B79DD9;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <ImageView fx:id="visaLogo" fitHeight="40.0" fitWidth="100.0" 
                          GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </GridPane>

            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="payButton" mnemonicParsing="false" onAction="#processPayment" 
                        prefHeight="40.0" prefWidth="200.0" 
                        style="-fx-background-color: #9B6B9E; -fx-text-fill: #fff;" 
                        text="Pay Now">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#goBack" 
                        prefHeight="40.0" prefWidth="200.0" 
                        style="-fx-background-color: #B79DD9; -fx-text-fill: #4B275F;" 
                        text="Back to Checkout">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </children>
</AnchorPane> 