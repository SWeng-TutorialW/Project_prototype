<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.OrderPageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button fx:id="backButton" mnemonicParsing="false" onAction="#goBackToCatalog" text="Back to Catalog" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
    </HBox>

    <HBox alignment="CENTER" spacing="20.0">
        <Label text="Order Page" style="-fx-font-size: 24px;" />
    </HBox>

    <HBox alignment="CENTER" spacing="20.0">
        <VBox alignment="CENTER" spacing="10.0">
            <ImageView fx:id="flowerImage" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="flowerName" style="-fx-font-size: 20px;" />
            <Label fx:id="flowerType" style="-fx-font-size: 16px;" />
            <Label fx:id="flowerPrice" style="-fx-font-size: 18px;" />
        </VBox>
    </HBox>

    <HBox alignment="CENTER" spacing="20.0">
        <Label text="Quantity:" />
        <Spinner fx:id="quantitySpinner" max="99" min="1" prefWidth="100.0" />
    </HBox>

    <HBox alignment="CENTER" spacing="20.0">
        <Button mnemonicParsing="false" onAction="#addToCart" text="Add to Cart" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        <Button mnemonicParsing="false" onAction="#viewCart" text="View Cart" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
    </HBox>
</VBox> 